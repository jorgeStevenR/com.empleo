# Etapa 1: Compilaci贸n con Maven y JDK 21
FROM maven:3.9.6-eclipse-temurin-21 AS build
WORKDIR /app
COPY . .
RUN mvn -B -q clean package -DskipTests

# Etapa 2: Imagen final para ejecuci贸n
FROM eclipse-temurin:21-jdk-jammy
WORKDIR /app
COPY --from=build /app/target/*.jar /app/portal_empleos.jar

# Configuraci贸n de variables y puerto
ENV JAVA_OPTS=""
EXPOSE 8080

# Comando de ejecuci贸n (Render usa la variable $PORT)
CMD ["sh", "-c", "java $JAVA_OPTS -jar -Dserver.port=${PORT:-8080} /app/portal_empleos.jar"]
